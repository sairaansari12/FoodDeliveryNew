<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header'); -%>


<body class="loading"
    data-layout='{"mode": "light", "width": "fluid", "menuPosition": "fixed", "sidebar": { "color": "light", "size": "default", "showuser": false}, "topbar": {"color": "dark"}, "showRightSidebarOnPageLoad": true}'>
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('../partials/dashboardHeader'); -%>
            <div class="content-page">
                <div class="content">
                    <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <h4 class="page-title">Edit Offer</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 
                    <!-- Start Content-->
                    <div class="container-fluid">
                    <form  role="form" onsubmit="return false"  class="col-md-12"  id="adduser" >
                    <input type="hidden"  name="parentId" id="parentId"   />
                     <input type="hidden"  name="coupanId" id="coupanId"  value="<%-data.id%>" />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card-box">
                                    <div class="row">
                                        <div class="form-group col-md-4 mb-3">
                                            <label for="product-name">Offer Name <span class="text-danger">*</span></label>
                                            <input type="text" value="<%-data.name%>" id="name" autocomplete="off"  minlength="2" maxlength="100" name="name" class="form-control" placeholder="Offer Name">
                                        </div>

                                        <div class="form-group col-md-4 mb-3">
                                            <label for="product-name">Offer Code <span class="text-danger">*</span></label>
                                            <input type="text" id="code" value="<%-data.code%>"  autocomplete="off" minlength="2" maxlength="30" name="code" class="form-control" placeholder="Offer Code">
                                        </div>

                                        <div class="form-group col-md-4 mb-3">
                                            <label for="product-name">Offer Discount (%) <span class="text-danger">*</span></label>
                                            <input type="number" id="discount" value="<%-data.discount%>" name="discount" class="form-control" placeholder="Offer Discount (%)">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-6 mb-3">
                                            <label for="product-name">Offer Usage Limit <span class="text-danger">*</span></label>
                                            <input type="number" id="usageLimit" value="<%-data.usageLimit%>" name="usageLimit" class="form-control" placeholder="Offer Usage Limit">
                                        </div>

                                        <div class="form-group col-md-6 mb-3">
                                            <label for="product-name">Minimum Order Amount <span class="text-danger">*</span></label>
                                            <input type="number" id="minimumAmount" value="<%-data.minimumAmount%>" name="minimumAmount" class="form-control" placeholder="Minimum Order Amount">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group col-md-6 mb-3">
                                            <label>Icon</label> <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <div class="custom-file">
                                                     <input type="file" id="icon" name="icon" class="form-control-file">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <!-- Date View -->
                                            <div class="form-group">
                                                <label>Uploaded Icon </label>
                                                <img id="myIcon" src="<%=data.icon%>" alt="Icon" style="width:50%;max-width:100px">
                                            </div>
                                        </div>
                                       
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <!-- Date View -->
                                            <div class="form-group">
                                                <label>Due Date <span class="text-danger">*</span></label>
                                                <input type="text" value="<%-data.validupto%>" class="form-control" id="validupto" name="validupto" placeholder="Offer Valid">
                                            </div>
                                        </div>
                                        <div class="form-group  col-md-6 mb-3">
                                            <label for="product-description">Offer Description <span class="text-danger">*</span></label>
                                            <textarea class="form-control" id="description" value="<%-data.description%>" name="description" rows="5" placeholder="Please enter description"><%-data.description%></textarea>
                                        </div>
                                    </div>
                                </div> <!-- end card-box -->
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-12">
                                <div class="text-center mb-3">
                                    <a href="<%- adminpath %>coupans"><button type="button" class="btn w-sm btn-light waves-effect">Cancel</button></a>
                                    <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Update</button>
                                </div>
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->
                    </form>
                    </div> <!-- container -->

                </div> <!-- content -->
            </div>
                
</div>
                
    <!-- END wrapper -->
    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>
    <%- include('../partials/script'); -%>
    <%- include('../partials/commonJs'); -%>
    <script>
    $(function() { 
        $('#sidebar-menu ul li').find('a[href*="<%-adminpath%>offers"]').parent().addClass('menuitem-active');
        $('#sidebar-menu ul li a[href^="<%-adminpath%>offers"]').addClass('active');
    });
    $("#validupto").flatpickr({minDate: "today"});
    $('#name').on('keypress', function (event) {
        var regex = new RegExp("^[a-zA-Z0-9_ ]*$");
        var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
        if (!regex.test(key)) {
           event.preventDefault();
           return false;
        }
    });
    $("#adduser").validate({
        rules: {
            name: {
              required: true
            },
            code: {
              required: true
            },
            discount: {
                required: true
            },
            usageLimit: {
                required: true
            },
            minimumAmount: {
                required: true
            },
            validupto: {
                required: true
            },
            description: {
                required: true
            },
            icon: { accept: "image/jpg,image/jpeg,image/png,image/gif"},

        },
        messages: {
            name: {
                required: "This field is required"
            },
            code: {
                required: "This field is required"
            },
            discount: {
                required: "This field is required."
            },
            usageLimit: {
              required: "This field is required"
            },
            minimumAmount: {
              required: "This field is required"
            },
            validupto: {
              required: "This field is required"
            },
            description: {
              required: "This field is required"
            },
            icon: {accept: 'Not an image!'},
        },
        submitHandler: function (form) {
            $(".overlay").show();
            var tempform = $('#adduser');
            var form_data = new FormData(tempform[0]);
            $(".overlay").show();
            $.ajax({
                type: 'POST',
                url: '<%-adminpath%>offers/update',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $(".overlay").hide();
                    if (response.code == 200) {
                  
                        //showToastSuccess(response.message)

                         window.location.href="<%-adminpath%>offers";
                       
                    } else {
                        //showToastError(response.message)
                    }
                }
            });
        }
        
    });
    </script>
</body>

</html>