<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header'); -%>


<body class="loading"
    data-layout='{"mode": "light", "width": "fluid", "menuPosition": "fixed", "sidebar": { "color": "light", "size": "default", "showuser": false}, "topbar": {"color": "dark"}, "showRightSidebarOnPageLoad": true}'>
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('../partials/dashboardHeader'); -%>
    <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="<%- adminpath %>">Dashboard</a></li>
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Order Setting</a></li>
                                            <li class="breadcrumb-item active">Pick Up</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title">Pick Up Instructions</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 


                        <div class="row">
                            <form  role="form" onsubmit="return false"  class="col-md-12"  id="adduser" >
                    <input type="hidden"  name="parentId" id="parentId"   />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card-box">
                                    <% for(var i =0;i<inst.length;i++){ %>
                                    <div class="row after-add-more">
                                        <div class="form-group  col-md-4 mb-3">
                                            <label for="product-name">Add Tip <span class="text-danger">*</span></label>
                                            <input type="number" id="tip[]" value="<%- inst[i] %>" autocomplete="off"  minlength="1" maxlength="100" name="tip" class="form-control" placeholder="Add Tip">
                                        </div>
                                    </div>
                                    <% } %>
                                    <div class="col-md-2">
                                        <div class="form-group change">
                                            <label for="">&nbsp;</label><br/>
                                            <a class="btn btn-success add-more">+ Add More</a>
                                        </div>
                                    </div>
                                </div> <!-- end card-box -->
                            </div> <!-- end col -->
                            
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-12">
                                <div class="text-center mb-3">
                                    <a href="<%- adminpath %>coupans"><button type="button" class="btn w-sm btn-light waves-effect">Cancel</button></a>
                                    <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Save</button>
                                </div>
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->
                    </form>
                        </div>
                        <!-- end row -->
                        
                    </div> <!-- container -->

                </div> <!-- content -->

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->              
                
</div>

    <!-- END wrapper -->
    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>
    <%- include('../partials/script'); -%>
    <%- include('../partials/commonJs'); -%>
<script>
$(document).ready(function() {
    $("body").on("click",".add-more",function(){ 
        var html = $(".after-add-more").first().clone();
        //  $(html).find(".change").prepend("<label for=''>&nbsp;</label><br/><a class='btn btn-danger remove'>- Remove</a>");
        $(html).append("<button class='btn w-sm btn-danger remove waves-effect waves-light'>- Remove</button>");
        $(".after-add-more").last().after(html);
      
     
       
    });

    $("body").on("click",".remove",function(){ 
        $(this).parents(".after-add-more").remove();
    });
});

$("#adduser").validate({
        rules: {
            tip: {
              required: true
            }
        },
        messages: {
            tip: {
                required: "This field is required"
            }
        },
        submitHandler: function (form) {
 
            $(".overlay").show();
            var tempform = $('#adduser');
            var form_data = new FormData(tempform[0]);
            console.log(form_data);
            $(".overlay").show();
            $.ajax({
                type: 'POST',
                url: '<%-adminpath%>ordersetting/addtip',
                dataType: 'json',
                data: form_data,
                contentType:false,
                cache:false,
                processData:false,
                success: function (response) {
                    $(".overlay").hide();
                    if (response.code == 200) {
                  
                        //showToastSuccess(response.message)

                        window.location.reload();
                       
                    } else {
                        showToastError(response.message)
                    }
                }
            });
        }
        
    });

</script>
</body>

</html>